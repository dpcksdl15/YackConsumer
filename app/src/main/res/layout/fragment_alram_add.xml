<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/laout1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >


        <TextView
            android:id="@+id/et_search_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/nr"
            android:textColor="#404041"
            android:text="복약알람" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#dbdbdb"
        android:layout_weight="1"
        >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="34dp"
            android:drawableStart="@drawable/alram_title"
            android:drawablePadding="10dp"
            android:fontFamily="@font/gm"
            android:textSize="14sp"
            android:text="알람제목"/>

        <EditText
            android:id="@+id/et_alram_name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_alram_add_title"
            android:paddingLeft="20dp"
            android:hint="약이름이나 알람제목을 입력해 주세요!"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableStart="@drawable/alram_type"
            android:drawablePadding="10dp"
            android:fontFamily="@font/gm"
            android:textSize="14sp"
            android:text="복약설정"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_alram_cycle_every"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/background_alram_add_type"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:fontFamily="@font/nr"
                android:textSize="12sp"
                android:textColor="#979797"
                android:text="매일"/>

            <TextView
                android:id="@+id/tv_alram_cyle_custom"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/background_alram_add_type"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:fontFamily="@font/nr"
                android:textSize="12sp"
                android:textColor="#979797"
                android:text="매일"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="#ffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:paddingLeft="21dp"
                android:drawableStart="@drawable/alram_calendar_icon"
                android:drawablePadding="10dp"
                android:textSize="14sp"
                android:fontFamily="@font/gm"
                android:text="8.9 월 - 8.20 금"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="17dp"
                android:paddingBottom="17dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textSize="14sp"
                android:fontFamily="@font/gm"
                android:textColor="#067bfe"
                android:text="변경"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:background="#ffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:paddingLeft="21dp"
                android:drawableStart="@drawable/alram_cycle_icon"
                android:drawablePadding="10dp"
                android:textSize="14sp"
                android:fontFamily="@font/gm"
                android:text="주기 설정"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="17dp"
                android:paddingBottom="17dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:src="@drawable/icon6"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:background="@drawable/background_alram_cycle_type_b"
                android:gravity="center"
                android:fontFamily="@font/gm"
                android:textSize="14sp"
                android:textColor="#404041"
                android:text="요일"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:background="@drawable/background_alram_cycle_type"
                android:gravity="center"
                android:fontFamily="@font/gm"
                android:textSize="14sp"
                android:textColor="#404041"
                android:text="일"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#ffffff"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="월"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="화"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="수"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="목"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="금"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="토"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date_b"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="일"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <EditText
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:hint="숫자 입력"
                android:text=""/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="화"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="수"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="목"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="금"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="토"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_alram_date_b"
                android:gravity="center"
                android:fontFamily="@font/nb"
                android:textSize="12sp"
                android:textColor="#404041"
                android:text="일"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableStart="@drawable/alram_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/gm"
            android:textSize="14sp"
            android:text="알람설정"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_alram_time_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">


        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_alram_add"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_marginTop="34dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/alram_add_recycler_add"
            android:fontFamily="@font/gm"
            android:textColor="#979797"
            android:textSize="12sp"
            android:text="추가하기"/>

    </LinearLayout>

    </ScrollView>

    </LinearLayout>

        <Button
            android:id="@+id/bt_alram_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_alram_add_button"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/neb"
            android:text="저장하기"/>


</LinearLayout>