<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/md_price_result_list"
    android:orientation="vertical">


    <TextView
        android:id="@+id/et_md_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neb"
        android:textSize="14sp"
        android:textColor="#404041"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/nb"
            android:textColor="#828282"
            android:textSize="12sp"
            android:gravity="center"
            android:text="약품코드" />

        <TextView
            android:id="@+id/tv_md_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:fontFamily="@font/nb"
            android:textColor="#a9a9a9"
            android:textSize="12sp"
            android:gravity="center"
            android:text="적용일자" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/nb"
            android:textColor="#828282"
            android:textSize="12sp"
            android:gravity="center"
            android:text="적용일자" />

        <TextView
            android:id="@+id/tv_md_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:fontFamily="@font/nb"
            android:textColor="#a9a9a9"
            android:textSize="12sp"
            android:gravity="center"
            android:text="적용일자" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cap_icon"
                android:layout_marginRight="6dp"/>

            <TextView
                android:id="@+id/tv_md_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neb"
                android:textSize="16sp"
                android:textColor="#404041"
                android:text="63원" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>